<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strona główna</title>
    <link rel="stylesheet" href="~/css/DodawanieRestauracji.css" />

    <script>
        document.getElementById("Zdjecie").addEventListener("change", function () {
            const file = this.files[0]; // Pobierz wybrany plik
            const reader = new FileReader();

            if (file) {
                reader.onload = function (e) {
                    const base64String = e.target.result; // Konwersja na Base64
                    document.getElementById("Zdjecie").value = base64String; // Wstaw do textarea
                };
                reader.readAsDataURL(file); // Czytaj plik jako Base64
            }
        });
    </script>
</head>
<body>
<h1>Formularz Danych Restauracji</h1>
    <form asp-action="DodajRestauracje" asp-controller="Restauracja" method="post">
    <!-- Nazwa -->
    <div class="form-group">
        <label for="Nazwa">Nazwa:</label>
        <input type="text" id="Nazwa" name="Nazwa" required>
    </div>

    <!-- Opis -->
    <div class="form-group">
        <label for="Opis">Opis:</label>
        <textarea id="Opis" name="Opis"></textarea>
    </div>

    <!-- Zdjecie -->
    <div class="form-group">
            <div class="form-group">
                <label for="Zdjecie">Wybierz zdjęcie:</label>
                <input type="file" id="Zdjecie" name="Zdjecie" accept="image/*" />
            </div>
    </div>

    <!-- TypLokalu -->
    <div class="form-group">
        <label for="TypLokalu">Typ Lokalu:</label>
        <input type="text" id="TypLokalu" name="TypLokalu">
    </div>

    <!-- TypRestauracji -->
    <div class="form-group">
        <label for="TypRestauracji">Typ Restauracji:</label>
        <input type="text" id="TypRestauracji" name="TypRestauracji">
    </div>

    <!-- CzyDostawa -->
    <div class="form-group">
        <label for="CzyDostawa">Czy Dostawa:</label>
        <input type="checkbox" id="CzyDostawa" name="CzyDostawa">
    </div>

    <!-- CzyDriveThru -->
    <div class="form-group">
        <label for="CzyDriveThru">Czy Drive-Thru:</label>
        <input type="checkbox" id="CzyDriveThru" name="CzyDriveThru">
    </div>

    <!-- CzyParkinPrzyRestauracji -->
    <div class="form-group">
        <label for="CzyParkinPrzyRestauracji">Czy Parking Przy Restauracji:</label>
        <input type="checkbox" id="CzyParkinPrzyRestauracji" name="CzyParkinPrzyRestauracji">
    </div>

    <!-- CzyMozliwaRezerwacja -->
    <div class="form-group">
        <label for="CzyMozliwaRezerwacja">Czy Możliwa Rezerwacja:</label>
        <input type="checkbox" id="CzyMozliwaRezerwacja" name="CzyMozliwaRezerwacja">
    </div>

    <!-- CzyImprezyOkolicznosciowe -->
    <div class="form-group">
        <label for="CzyImprezyOkolicznosciowe">Czy Imprezy Okolicznościowe:</label>
        <input type="checkbox" id="CzyImprezyOkolicznosciowe" name="CzyImprezyOkolicznosciowe">
    </div>

    <!-- CzySalaOkolicznosciowa -->
    <div class="form-group">
        <label for="CzySalaOkolicznosciowa">Czy Sala Okolicznościowa:</label>
        <input type="checkbox" id="CzySalaOkolicznosciowa" name="CzySalaOkolicznosciowa">
    </div>

    <!-- GodzinaOtwarcia -->
    <div class="form-group">
        <label for="GodzinaOtwarcia">Godzina Otwarcia:</label>
        <input type="time" id="GodzinaOtwarcia" name="GodzinaOtwarcia" required>
    </div>

    <!-- GodzinaZamkniecia -->
    <div class="form-group">
        <label for="GodzinaZamkniecia">Godzina Zamknięcia:</label>
        <input type="time" id="GodzinaZamkniecia" name="GodzinaZamkniecia" required>
    </div>

    <!-- CzasOtwarcia -->
    <div class="form-group">
        <label for="CzasOtwarcia">Czas Otwarcia:</label>
        <input type="time" id="CzasOtwarcia" name="CzasOtwarcia">
    </div>

    <button type="submit">Zapisz</button>
</form>
</body>
